@model CrudOperation.Models.tblcrud
@{
    ViewBag.Title = "Crud Operation";
}

<h2>Crud Operation</h2>
@using (Html.BeginForm("StoreData", "Crud", FormMethod.Post, new { @class = "form-group" }))
{
                <div class="container">
                    <div class="form-group">
                        <label>First Name</label>
                        @Html.TextBoxFor(x => x.First_Name, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Last Name</label>
                        @Html.TextBoxFor(x => x.Last_Name, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Mobile Number</label>
                        @Html.TextBoxFor(x => x.Mobile_No, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Email Id</label>
                        @Html.TextBoxFor(x => x.Email_Id, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        
                        <label>Gender</label>
                            Male
                            @Html.RadioButtonFor(x => x.Gender, "Male")
                            Female
                            @Html.RadioButtonFor(x => x.Gender, "Female")
                        
                        </div>

                    <div class="form-group">
                        <label>City</label>
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Hobby</label>
                        @Html.TextBoxFor(x => x.Hobbies, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>About</label>
                        @Html.TextBoxFor(x => x.About, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn-danger">Reset</button>
                </div>
            }
